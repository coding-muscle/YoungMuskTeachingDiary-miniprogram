.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
  }
  
  .input-container {
    width: 100%;
    margin-bottom: 20px;
  }
  
  input {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    width: 100%;
  }
  
  .picker {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    text-align: center;
  }
  
  .avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-top: 10px;
  }
  
  .save-button {
    width: 100%;
    background-color: #00BFFF;
    color: #fff;
    border-radius: 5px;
    margin-top: 20px;
  }