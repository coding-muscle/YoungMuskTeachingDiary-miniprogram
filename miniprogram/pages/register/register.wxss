  .container {
    padding: 20px;
    height: 45rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .form input {
    width: 89%;
    height: 40px;
    margin-bottom: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 0 10px;
  }
  
  .form button {
    width: 100%;
    height: 40px;
    background-color: #07c160;
    color: #fff;
    border-radius: 5px;
  }
  
  .form navigator {
    margin-top: 20px;
    text-align: center;
    color: #07c160;
  }