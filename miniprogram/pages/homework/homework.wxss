.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
  }
  
  .filter-buttons {
    display: flex;
    justify-content: space-around;
    width: 100%;
    margin-bottom: 20px;
  }
  
  .filter-buttons button {
    flex: 1;
    margin: 0 10px;
    background-color: #f0f0f0;
    color: #333;
    border: none;
  }
  
  .filter-buttons button.active {
    background-color: #00BFFF;
    color: #fff;
  }
  
  .card {
    background-color: #FFFFFF;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin-bottom: 20px;
    width: 90%;
  }
  
  .card-header {
    border-bottom: 1px solid #EEEEEE;
    padding-bottom: 10px;
    margin-bottom: 10px;
  }
  
  .title {
    font-size: 18px;
    font-weight: bold;
    color: #333333;
  }
  
  .card-body {
    margin-bottom: 10px;
  }
  
  .info {
    display: block;
    font-size: 14px;
    color: #666666;
    margin-bottom: 5px;
  }
  
  .completed {
    color: green;
  }
  
  .uncompleted {
    color: red;
  }